<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CCCCCC"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_simple_press_top"
        android:gravity="center"
        android:text="相机"
        android:textColor="@color/colorBlackText"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorDarkGreyLine" />

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_simple_press_mid"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/colorBlackText"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorDarkGreyLine" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_simple_press_bottom"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorBlackText"
        android:textSize="20sp" />

</LinearLayout>