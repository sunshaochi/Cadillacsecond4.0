<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <include layout="@layout/ui_simple_platform_title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agency_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="经销商:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_agency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carType_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="车系:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_carType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_configure_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="配置:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_configure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_color_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="颜色:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="价格:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="库龄:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dateOfPublish_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="发布日期:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_dateOfPublish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id_title"
                android:layout_width="@dimen/activity_detail_title_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
                android:text="编号:"
                android:textColor="@color/colorDarkGreyLine"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="无"
                android:textColor="@color/colorBlackText"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_tel" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_tel"
            android:src="@drawable/ic_message" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_message"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/selected_text_color"
            android:clickable="true"
            android:textSize="18sp"
            android:background="@drawable/icon_button_summit_order"
            android:text="提交购车请求" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

    </LinearLayout>
</LinearLayout>
