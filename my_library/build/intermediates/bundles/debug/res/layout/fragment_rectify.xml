<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="整改"
        android:textColor="@color/colorBlackText"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_frame"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_camera" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic2"
            android:layout_width="0dp"
            android:layout_height="100dip"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_frame"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_camera" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_frame"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_camera" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_grey_frame"
        android:gravity="start"
        android:hint="请输入你的意见和理由"
        android:padding="5dp"
        android:textColor="@color/colorBlackText"
        android:textSize="20sp" />
</LinearLayout>