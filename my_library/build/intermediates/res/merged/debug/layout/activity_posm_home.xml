<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/ui_posm_title_bar" />

    <View
        android:id="@+id/v_line1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDarkGreyLine" />

    <com.ist.cadillacpaltform.UI.view.POSMTabView
        android:id="@+id/v_posm_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDarkGreyLine" />

    <com.ist.cadillacpaltform.UI.view.PullToRefreshListView
        android:id="@+id/lv_posm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:divider="@color/colorLightGreyLine"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:id="@+id/ll_fill_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>