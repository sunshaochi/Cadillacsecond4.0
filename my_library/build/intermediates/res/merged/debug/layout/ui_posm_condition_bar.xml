<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_view_high"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_option_region"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_option_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="地区"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_bottom" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorLightGreyLine" />

    <LinearLayout
        android:id="@+id/ll_option_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_option_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全部"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_bottom" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorLightGreyLine" />

    <LinearLayout
        android:id="@+id/ll_option_quarter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_option_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2017.Q1"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_bottom" />

    </LinearLayout>

</LinearLayout>