<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_agency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_agency_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="经销商"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_agency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="无"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_carType_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="车系"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_carType"
            android:layout_width="@dimen/spinner_line_width"
            android:dropDownWidth="@dimen/spinner_line_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_configure_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="配置"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_configure"
            android:layout_width="@dimen/spinner_config_width"
            android:dropDownWidth="@dimen/spinner_config_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_color_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="颜色"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_color"
            android:layout_width="@dimen/spinner_color_width"
            android:dropDownWidth="@dimen/spinner_color_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="价格"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="@dimen/price_width"
            android:layout_height="@dimen/addTime_height"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="万元"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dataOfStore_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="入库日期"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_addTime"
            android:layout_width="@dimen/addTime_width"
            android:layout_height="@dimen/addTime_height"
            android:background="@drawable/icon_addtime_background"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="2016年10月10日"
            android:textColor="@color/colorBlackText"
            android:textSize="20sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dateOfPublish_title"
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="是否已上报"
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_reported"
            android:layout_width="@dimen/spinner_reported_width"
            android:dropDownWidth="@dimen/spinner_reported_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/activity_detail_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/form_car_detail_info_table_head_paddingLeft"
            android:text="车况："
            android:textColor="@color/colorDarkGreyLine"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="@dimen/spinner_reported_width"
            android:dropDownWidth="@dimen/spinner_reported_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />
</LinearLayout>