<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:id="@+id/ll_item_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_car_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_weight="6"
                android:id="@+id/tv_car_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SRX 3.0L 舒适型(檀黑) 16.5MY"
                android:textSize="14sp"
                android:textColor="@color/colorBlackText"
                />

            <TextView
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/tv_car_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="白"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <TextView
                android:gravity="right"
                android:layout_weight="3"
                android:layout_marginRight="15dp"
                android:id="@+id/tv_car_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorRedText"
                android:text="159.9万"
                />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_dealer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="上海百联沪通"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_right_view"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_right_button1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_blue"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_right_button2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:background="#A20E28"
            android:gravity="center"
            />

    </LinearLayout>


</LinearLayout>