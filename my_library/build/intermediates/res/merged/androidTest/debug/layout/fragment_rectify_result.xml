<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="整改"
        android:textColor="@color/colorBlackText"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic1"
            android:layout_width="0dp"
            android:layout_height="@dimen/posm_pic_height"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_placeholder" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic2"
            android:layout_width="0dp"
            android:layout_height="@dimen/posm_pic_height"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_placeholder" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_rectificationPic3"
            android:layout_width="0dp"
            android:layout_height="@dimen/posm_pic_height"
            android:layout_weight="1"
            android:padding="1dp"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/icon_placeholder" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_rectification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="等待载入"
        android:textColor="@color/colorBlackText"
        android:textSize="20sp" />


</LinearLayout>