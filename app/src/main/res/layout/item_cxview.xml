<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#F4F4F4"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_jpbjcx"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="BWM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:id="@+id/rl_bz"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_jpbjcx"
                android:layout_width="40dp"
                android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_warm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_zc"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/iv_jpbjcxchange"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_zc"
                    android:textColor="@color/colorRedText"
                    android:textSize="12sp"
                    android:text="输入金融政策"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/colorRedText"
                    android:layout_width="80dp"
                    android:layout_height="1sp"></View>

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_jpbjcxchange"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/close_hover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:layout_height="1sp"
            android:background="#FfFfFf"
            android:layout_width="match_parent"></View>

    </LinearLayout>

</LinearLayout>