<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_selecttop"
        android:background="@color/caldroid_transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#faf9f9"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_cx"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:divider="@null"></ListView>

        <LinearLayout
            android:id="@+id/ll_tb"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_btnck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/check_no" />

                <TextView
                    android:id="@+id/tv_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="同比"
                    android:textColor="#bcb7b8"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_statmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_tb"
                    android:textColor="@drawable/rb_textcolor"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/rd_box"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同比"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_hb"
                    android:textColor="@drawable/rb_textcolor"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/rd_box"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="环比"
                    android:textSize="14sp" />


            </RadioGroup>


            <RadioGroup
                android:id="@+id/rd_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:textColor="@drawable/rb_textcolor"
                    android:id="@+id/rb_kl"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ck_box"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客流"
                    android:textSize="14sp" />

                <RadioButton
                    android:textColor="@drawable/rb_textcolor"
                    android:id="@+id/rb_dd"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ck_box"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="订单"
                    android:textSize="14sp" />


            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/kpibtn"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_selectbot"
        android:background="@color/caldroid_transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>