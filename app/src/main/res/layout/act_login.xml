<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/login_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="38dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_register"
                    android:text="用户名:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_account"
                    style="@style/et_register"
                    android:background="@null"
                    android:hint="输入用户名"
                    android:textColorHint="#999999"
                    android:textSize="15sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_uselear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/clear_et" />

                <ImageView
                    android:id="@+id/iv_plook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/pwd_hid"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="20dp"
                android:background="#eeeeee"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_register"
                    android:text="密    码:"
                    android:textSize="15sp" />

                <EditText

                    android:id="@+id/et_password"
                    style="@style/et_register"
                    android:background="@null"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:textColorHint="#999999"
                    android:textSize="15sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_pwdlear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/clear_et" />

                <ImageView
                    android:id="@+id/iv_nplook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/pwd_hid"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="20dp"
                android:background="#eeeeee"></View>


            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_findPassword"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="忘记密码"
                android:textColor="#303030"
                android:textSize="12sp" />

            <View
                android:layout_width="1sp"
                android:layout_height="12sp"
                android:background="#d8d8d8"></View>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="手机注册"
                android:textColor="#303030"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="技术支持热线:4007285660\n时间:周一至周五10:00-18:00" />



</RelativeLayout>



