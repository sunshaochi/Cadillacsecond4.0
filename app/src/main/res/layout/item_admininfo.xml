<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/tv_adminname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="Cadilac一区"
            android:textColor="#4b4b4b"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_dj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_tijiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/djwc" />
            </RelativeLayout>

            <View
                android:id="@+id/view_dj"
                android:background="#c6c6c6"
                android:layout_width="1sp"
                android:layout_height="20dp"></View>

            <RelativeLayout
                android:id="@+id/rl_dx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_duanxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/xx" />
            </RelativeLayout>

            <View
                android:background="#c6c6c6"
                android:layout_width="1sp"
                android:layout_height="20dp"></View>
            <RelativeLayout
                android:id="@+id/rl_dh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/dh" />
            </RelativeLayout>
            <View
                android:background="#c6c6c6"
                android:layout_width="1sp"
                android:layout_height="20dp"></View>
            <RelativeLayout
                android:id="@+id/rl_ts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_wtj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ts" />
            </RelativeLayout>

            <View
                android:background="#c6c6c6"
                android:layout_width="1sp"
                android:layout_height="20dp"></View>
            <RelativeLayout
                android:id="@+id/rl_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_untjnum"
                    android:textColor="@color/colorRed"
                    android:textSize="12sp"
                    android:text="2500"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_tj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/djwc" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#d8d8d8"
        android:layout_width="match_parent"
        android:layout_height="1sp"></View>

</LinearLayout>